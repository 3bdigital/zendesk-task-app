<div>
	<ul class="unstyled">
		{{#tasks}}
	  	<li><input type="checkbox"> {{task}}</li>
	  	{{/tasks}}
	</ul>

	{{#unless tasks.length}}
		<p>{{t "none"}}}</p>
	{{/unless}}

	<div class="add-task-container">
		<input type="text" id="newtask">
		<button class="addtask btn btn-success">Add</button>
	</p>
</div>